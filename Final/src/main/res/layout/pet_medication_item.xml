<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/ZenPetsCards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgvwMedicineImage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/beagle"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/fralaEmptyMedicineImage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:adjustViewBounds="true"
                    app:iiv_color="@android:color/holo_red_light"
                    app:iiv_icon="faw-medkit"
                    app:iiv_size="50dp" />

                <android.support.v7.widget.AppCompatTextView
                    fontPath="fonts/Roboto-Thin.ttf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="65dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="@string/medical_record_item_no_image"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="18sp" />
            </FrameLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgvwMedicineOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:background="#CCDCDCDC"
                android:padding="8dp"
                android:src="@drawable/ic_more_vert_black_24dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtMedicineName"
                fontPath="fonts/Roboto-Regular.ttf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="10dp"
                android:background="#CCDCDCDC"
                android:gravity="start|center"
                android:paddingBottom="15dp"
                android:paddingEnd="11dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingStart="11dp"
                android:paddingTop="15dp"
                android:text="@string/medical_record_item_name"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp" />
        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>