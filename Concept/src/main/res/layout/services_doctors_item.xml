<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linlaDoctorContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/ZenPetsCards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgvwDoctorProfile"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/beagle"
                        app:civ_border_color="#CCDCDCDC"
                        app:civ_border_width="4dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtDoctorCharges"
                        fontPath="fonts/Exo2-Light.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="â‚¹ 200"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtDoctorName"
                        fontPath="fonts/Exo2-Regular.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:text="DOCTOR NAME"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="16sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtClinicAddress"
                        fontPath="fonts/Exo2-Regular.otf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:padding="5dp"
                        android:text="CLINIC ADDRESS"
                        android:textColor="@android:color/tertiary_text_light"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linlaDoctorExp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/txtDoctorExp"
                                fontPath="fonts/Exo2-Light.otf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="20 yrs exp"
                                android:textColor="@android:color/secondary_text_light"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatTextView
                            fontPath="fonts/fontawesome-webfont.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="@string/doctor_bottom_separator_circle"
                            android:textColor="@android:color/tertiary_text_light"
                            android:textSize="5sp" />

                        <LinearLayout
                            android:id="@+id/linlaDoctorReviews"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/txtDoctorReviews"
                                fontPath="fonts/Exo2-Light.otf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="29 reviews"
                                android:textColor="@android:color/secondary_text_light"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <android.support.v7.widget.AppCompatTextView
                            fontPath="fonts/fontawesome-webfont.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="@string/doctor_bottom_separator_circle"
                            android:textColor="@android:color/tertiary_text_light"
                            android:textSize="5sp" />

                        <LinearLayout
                            android:id="@+id/linlaDoctorDistance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/txtDoctorDistance"
                                fontPath="fonts/Exo2-Light.otf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="~ 1.1 km"
                                android:textColor="@android:color/secondary_text_light"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>