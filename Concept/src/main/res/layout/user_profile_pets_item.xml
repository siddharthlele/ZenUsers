<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/ZenPetsCards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgvwPetPicture"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beagle" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtGender"
                    fontPath="fonts/fontawesome-webfont.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_margin="5dp"
                    android:background="#CCDCDCDC"
                    android:gravity="center"
                    android:padding="11dp"
                    android:text="@string/gender_male"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgvwPetOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:background="#CCDCDCDC"
                    android:padding="6dp"
                    android:src="@drawable/ic_more_vert_black_24dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtPetName"
                    fontPath="fonts/Exo2-Regular.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:padding="11dp"
                    android:text="@string/pet_item_name"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="15sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtPetAge"
                    fontPath="fonts/Exo2-Regular.otf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_margin="5dp"
                    android:drawableLeft="@drawable/ic_cake_black_24dp"
                    android:drawablePadding="11dp"
                    android:drawableStart="@drawable/ic_cake_black_24dp"
                    android:gravity="start|center"
                    android:padding="6dp"
                    android:text="@string/pet_item_age"
                    android:textColor="@android:color/tertiary_text_light"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>