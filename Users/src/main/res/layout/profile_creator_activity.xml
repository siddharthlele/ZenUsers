<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/the_toolbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbarSize="@dimen/scroll_bar_size"
        android:scrollbarThumbVertical="@color/primary">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:padding="11dp"
                android:text="@string/profile_name_label"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edtUserName"
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:enabled="false"
                android:gravity="start|center"
                android:hint="@string/profile_name_hint"
                android:inputType="textCapWords"
                android:padding="11dp"
                android:textColor="@android:color/primary_text_light"
                android:textColorHint="@android:color/tertiary_text_light"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:padding="11dp"
                android:text="@string/profile_description_label"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edtUserDescription"
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="top|start"
                android:hint="@string/profile_description_hint"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="3"
                android:maxLines="8"
                android:minLines="3"
                android:padding="11dp"
                android:textColor="@android:color/primary_text_light"
                android:textColorHint="@android:color/tertiary_text_light"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:padding="11dp"
                android:text="@string/profile_phone_label"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edtPhoneNumber"
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:hint="@string/profile_phone_hint"
                android:inputType="phone"
                android:padding="11dp"
                android:textColor="@android:color/primary_text_light"
                android:textColorHint="@android:color/tertiary_text_light"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:padding="11dp"
                android:text="@string/profile_dob_label"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtDOB"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="11dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="16sp" />

                <com.mikepenz.iconics.view.IconicsButton
                    android:id="@+id/btnDOB"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:text="{faw-calendar}"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20sp" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:padding="11dp"
                android:text="@string/profile_gender_label"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="fill_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:orientation="horizontal"
                android:padding="11dp">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rdbtnMale"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:gravity="start|center"
                    android:text="@string/profile_gender_male"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rdbtnFemale"
                    fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="@string/profile_gender_female"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="16sp" />
            </RadioGroup>

            <android.support.v7.widget.AppCompatTextView
                fontPath="fonts/HelveticaNeueLTW1G-Cn.otf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start|center"
                android:padding="11dp"
                android:text="@string/profile_picture_label"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

            <android.support.v7.widget.CardView
                style="@style/ZenPetsCards"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="11dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgvwUserProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/empty_camera" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>